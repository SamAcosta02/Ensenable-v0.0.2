@model Ensenable.Models.UsersModel
@{
    ViewData["Title"] = "Register Page";
}



<section style="        background-color: #8c85d5;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-action="Register" asp-controller="Home" method="post">


                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <a href="../">
                                            <img alt="IEPAM" src="~/images/logo.svg"
                                                 width="427" />
                                        </a>
                                    </div>
                                    @{
                                        if (TempData.ContainsKey("errorRegis") && TempData["errorRegis"].Equals(1))
                                        {
                                                <h6 class="text-danger">
                                                    CORREO YA TIENE CUENTA. <a href="Login" style=" color: #793cbd;">Inicia Sesion aqui</a>
                                                </h6>
                                        }
                                        if (TempData.ContainsKey("invalidRegis") && TempData["invalidRegis"].Equals(1))
                                        {
                                                <h6 class="text-danger">CAMPOS INCOMPLETOS. INTENTE NUEVAMENTE.</h6>
                                        }
                                    }
                                    
                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Ingresa a su cuenta</h5>

                                    <div class="form-outline mb-4">
                                        <input asp-for="user_name" type="text" id="form2Example17" class="form-control form-control-lg" />
                                        <label class="form-label" for="form2Example7">Nombre</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="user_firstlastname" type="text" id="form2Example17" class="form-control form-control-lg" />
                                        <label class="form-label" for="form2Example7">Apellido Paterno</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="user_secondlastname" type="text" id="form2Example17" class="form-control form-control-lg" />
                                        <label class="form-label" for="form2Example7">Apellido Materno</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="user_email" type="email" id="form2Example17" class="form-control form-control-lg" />
                                        <label class="form-label" for="form2Example17">Correo electrónico</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="user_password" type="password" id="form2Example27" class="form-control form-control-lg" />
                                        <label class="form-label" for="form2Example27">Contraseña</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="user_role" type="radio" id="maestro" value="2"  />
                                        <label class="form-label" for="maestro">Maestro</label>
                                        <input asp-for="user_role" type="radio" id="alumno" value="3" />
                                        <label class="form-label" for="alumno">Alumno</label>
                                    </div>
                                    <input asp-for="user_status" type="text" value="false" style="visibility:hidden" />
                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Registrarse</button>
                                    </div>

                                    <a class="small text-muted" href="#!">Olvidaeste tu contraseña?</a>
                                    <p class="mb-5 pb-lg-2" style="color: #793cbd;">
                                        Ya tienes cuenta? <a href="Login"
                                                             style="        color: #793cbd;">Inicia Sesion aqui</a>
                                    </p>
                                    <a href="#!" class="small text-muted">Terms of use.</a>
                                    <a href="#!" class="small text-muted">Privacy policy</a>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>